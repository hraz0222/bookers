

<body>

  <h1>Books</h1>
 <table>
   <thead>
     <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", "/books/#{book.id}" %></td>
        <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
        <td><%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
       </tr>
       <% end %>
    </tbody>


 </table>

<h2>New book</h2>
<div class="error_new"><% if @book.errors.any? %>
 <h3>2 errors prohibited this book from being saved:</h3>
 <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</div>
<% end %>


<%= form_with model: @book, url:'/books', local:true do |f| %>
  <label><h4>Title</h4></label>
  <div class="field"><%= f.text_field :title %></div>
  <label><h4>Body</h4></label>
  <div class="field"><%= f.text_area :body %></div>
  <div class="actions"><%= f.submit 'Create Book' %></div>
<% end %>



</body>