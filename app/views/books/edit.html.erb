<div class="error_new"><% if @book.errors.any? %>
 <h3>2 errors prohibited this book from being saved:</h3>
 <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</div>
<% end %>

<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

  <div class="TitleForm"><p>Title</p>
  <%= f.text_field :title %></div>

  <div class="BodyForm"><p>Body</p>
  <%= f.text_area :body %></div>

  <div class="UpdateBook"><p><%= f.submit 'Update Book' %></p></div>
<% end %>

<div class="Show&Back">
  <%= link_to "Show", book_path(@book.id) %>|
  <%= link_to "Back", '/books' %>
</div>
